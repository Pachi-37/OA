<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- id 名和方法名对应，parameterType 对应参数类型 resultType 对应返回值类型 -->
<mapper namespace="dao.EmployeeDao">
    <select id="selectById" parameterType="Long" resultType="entity.Employee">
        select *
        from adm_employee
        where employee_id = #{value}
    </select>

    <select id="selectLeader" parameterType="entity.Employee" resultType="entity.Employee">
        select *
        from adm_employee
        <where>
            <if test="emp.level &lt; 7">
                level = 7 and department_id = #{emp.departmentId}
            </if>
            <if test="emp.level == 7">
                level = 8
            </if>
            <if test="emp.level == 8">
                employee_id = #{emp.employeeId}
            </if>
        </where>
    </select>

    <insert id="insertEmployee" parameterType="entity.Employee" useGeneratedKeys="true" keyProperty="employeeId" keyColumn="employee_id">
        insert into adm_employee (name, department_id, title ,level) values (#{name}, #{departmentId}, #{title},
        #{level})
    </insert>
</mapper>