<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.DepartmentDao">
    <select id="selectById" parameterType="Long" resultType="entity.Department">
        select * from adm_department where department_id = #{value}
    </select>

    <select id="selectAllDepartments" resultType="entity.Department">
        select * from adm_department
    </select>

    <select id="selectByDepartmentName" parameterType="String" resultType="entity.Department">
        select * from adm_department where department_name = #{value}
    </select>
</mapper>